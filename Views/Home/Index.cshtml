@{
    ViewData["Title"] = "Home";
}

<div class="hero-section">
    <div class="container">
        <h1 class="display-4 text-center">Create Your Perfect Wedding Website</h1>
        <p class="lead text-center">Plan, share, and celebrate your special day with elegance</p>
        <div class="text-center mt-4">
            <a class="btn btn-primary btn-lg" href="/Identity/Account/Register">Get Started</a>
        </div>
    </div>
</div>

<div class="features-section py-5">
    <div class="container">
        <div class="row">
            <div class="col-md-4">
                <a href="@Url.Action("Index", "Template")" class="feature-card-link">
                    <div class="feature-card text-center">
                        <i class="fas fa-palette fa-3x mb-3"></i>
                        <h3>Beautiful Templates</h3>
                        <p>Choose from our collection of elegant wedding website templates</p>
                    </div>
                </a>
            </div>
            <div class="col-md-4">
                <a href="@Url.Action("Index", "GiftRegistry")" class="feature-card-link">
                    <div class="feature-card text-center">
                        <i class="fas fa-gift fa-3x mb-3"></i>
                        <h3>Gift Registry</h3>
                        <p>Create and manage your wedding gift registry with ease</p>
                    </div>
                </a>
            </div>
            <div class="col-md-4">
                <a href="@Url.Action("Share", "WeddingSite")" class="feature-card-link">
                    <div class="feature-card text-center">
                        <i class="fas fa-heart fa-3x mb-3"></i>
                        <h3>Share Your Love</h3>
                        <p>Share your story and wedding details with friends and family</p>
                    </div>
                </a>
            </div>
        </div>
    </div>
</div>
